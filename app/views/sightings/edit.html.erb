<h1>Edit a sighting </h1>

<% if @sighting.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action = "/species/<%= @sighting.species_id %>/sightings/<%= @sighting.id %>" method = "post">
  <input name="_method" type="hidden" value="patch">
  <input id="species_id" name="sighting[species_id]" type="hidden" value="<%= @sighting.species_id %>">

  <label for="location">Location</label>
  <input id="location" name="sighting[location]" type="text" value="<%= @sighting.location %>">

  <label for="sighting_time">Time/Day</label>
  <input id="sighting_time" name="sighting[sighting_time]" type="text" value="<%= @sighting.sighting_time %>">

  <button>Edit Sighting!</button>
</form>
